{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Car Infotainment System with CarPlay",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder --linux --arm64",
    "build:pi": "electron-builder --linux --arm64 --armv7l"
  },
  "author": "Jane Doe",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.carinfotainment",
    "productName": "Car Infotainment",
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["arm64"]
        },
        {
          "target": "AppImage",
          "arch": ["arm64"]
        }
      ],
      "category": "Utility",
      "maintainer": "Your Name <your.email@example.com>"
    },
    "files": [
      "**/*",
      "!**/{.git,.gitignore,.DS_Store,npm-debug.log,node_modules}"
    ],
    "extraFiles": [
      "config.json"
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "broadway": "^4.1.0",
    "loudness": "^0.4.2"
  }
}